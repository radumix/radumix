using Microsoft.Azure.WebJobs;
using Microsoft.Azure.WebJobs.Extensions.Http;
using Microsoft.AspNetCore.Http;
using Microsoft.AspNetCore.Mvc;

public static class HelloFunction
{
    [FunctionName("HelloFunction")]
    public static IActionResult Run(
        [HttpTrigger(AuthorizationLevel.Function, "get")] HttpRequest req)
    {
        return new OkObjectResult("Hello from Azure Function!");
    }
}
deploy it.
----------------
call it from asp.net mvc
using System.Net.Http;
using System.Threading.Tasks;
using System.Web.Mvc;

public class HomeController : Controller
{
    public async Task<ActionResult> CallFunction()
    {
        string url = "https://your-function.azurewebsites.net/api/HelloFunction?code=ABC123";

        using (HttpClient client = new HttpClient())
        {
            string result = await client.GetStringAsync(url);

            ViewBag.FunctionResponse = result;
        }

        return View();
    }
}

